<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

    <main class="descripcion-producto">
      <article class="producto-article">
        <div class="producto-article-imagen">
          <p><a href="/">INICIO</a> ><%= producto.title %><%= producto.name %></p>
          <img src="/images/merchandising/<%= producto.image %>" />
        </div>
        <div class="producto-article-cont-descripcion">
          <div class="producto-article-cont-descripcion1">
            <div class="textodescripcion">
           
              <h6><%= producto.title %> </h6>
              <h5><%= producto.description %></h5>
            </div>

            <div>
              <span>$<%= producto.price %></span>
              <p>Ver cuotas</p>
            </div>
          </div>
          <div class="producto-article-cont-descripcion-comprar">
             <% if (locals.isLogged) { %>
            <button class="producto-article-cont-descripcion-comprar-button">
              <h3><i class="fas fa-shopping-cart"></i> <a id="botondeagregaralcarrito" href="#"onclick="agregarItem(event,'<%=producto.id%>')">Agregar al carrito</a> </h3>
            </button>
           
            <% }else{%>
               <button class="producto-article-cont-descripcion-comprar-button">
              <h3><i class="fas fa-shopping-cart"></i> <a id="botondeagregaralcarrito" href="#" class="deslogueado" onclick="">Agregar al carrito</a> </h3>
            </button>
              <% } %>
          </div>
          <div class="tarjetadeladescripciondelproductoalfinal">
            <img src="../images/tarjetas.PNG" alt="" />
          </div>
        </div>

      
      </article>
      <div class="producto-article-cont-descripcion-comprar-imagen">
        <img class="metodos" src="/images/tarjetas.PNG" />
      </div>
   
  
 
  <div class="relacionados mt-5">
    <h4>Productos relacionados</h4>
    <hr>
    <div class="glider-contain">
      <div class="glider ">
        <% relacionados.forEach(producto => { %>
          <div class="card mb-3  p-5 cardGlider">
          <div class="d-flex flex-column align-items-center ">
            <a href="/productos/detail/<%= producto.id %> ">
            <img class="w-100 tarjetaRelacionados" src="/images/merchandising/<%= producto.image %>" alt=""></a>
           
            <p class="mt-4"><%= producto.title %> </p>
      
          </div>
        </div>
        <% }) %>
       
      </div>
      <button aria-label="Previous" class="glider-prev">«</button>
      <button aria-label="Next" class="glider-next">»</button>
      <div role="tablist" class="dots"></div>
    </div>
  </div>
  
    </main>
    
  <!--   ============sweetalert2============ -->

     <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <button id="btn1" class="btn btn-autline-primary btn-lg btn-block">Basico</button>
          <button id="btn2" class="btn btn-autline-secondary btn-lg btn-block">Tipos de Popup</button>
        </div>
         <div class="col-lg-3">
          <button id="btn3" class="btn btn-autline-sucess btn-lg btn-block">Con imagenes</button>
          <button id="btn4" class="btn btn-autline-danger btn-lg btn-block">Con Posicion</button>
        </div>
         <div class="col-lg-3">
          <button id="btn5" class="btn btn-sucess btn-lg btn-block">Animado</button>
          <button id="btn6" class="btn btn-primary btn-lg btn-block">Cambiando el fondo</button>
        </div>
       <div class="col-lg-3">
          <button id="btn7" class="btn btn-info btn-lg btn-block">Progresivo</button>
          <button id="btn8" class="btn btn-danger btn-lg btn-block">Timer</button>
        </div>




      </div>



     </div>
    
     <!--   ============sweetalert2============ -->    
    
    <%- include('./partials/footer') %>
     <%- include('./partials/scripts') %>
     <script src="/javascript/productDetail.js"></script>
    
        
  </body>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script >
    document.querySelector(".deslogueado").addEventListener("click", (e) => {
    e.preventDefault();
    Swal.fire("Debes loguearte para poder realizar la compra")
    })
  </script>

</html>

