<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

      <main>

        <%- include('./partials/carrousel') %>
          <%- include('./partials/menuVentas') %>

            </div>
            <div class="titulogeneral">
              <h2 class="TIENDA">TIENDA</h2>
            </div>

            
            
            <section class="categorias"> 
              <% category.forEach(category => { %>
              <article class="cadacategoria zoom">
                <img src="../images/merchandising/comic2.png" alt="">
                <div class="titulocategoria">
                  <h3><%= category.name %> </h3>
                  <P>Emocion en vi√±etas</P>
                  <div class="vermas">
                    <a href="/productos#<%= category.name %>">
                      <h4>ver mas</h4>
                    </a>
                  </div>
