              </article>
              <% })%>
            </section>

            <div class="titulogeneral">

              <h2 class="TIENDA">OFERTAS</h2>
            </div>

            <section class="destacados">
            

    
              <% productsDiscount.forEach(product => { %>
                <article class="cadadestacado col-3">
                  <a href="/productos/detail/<%= product.id %>"><img src="/images/merchandising/<%=product.image%>" alt="<%= product.name %> "></a>
                  <div class="titulodestacado">
                    <h3><%= product.name %> </h3>
                    <P><%= product.discount %>% de descuento</P>
                  </div>
    
                </article>
              <% }) %>
          

            </section>



      </main>





      <%- include('./partials/footer') %>

