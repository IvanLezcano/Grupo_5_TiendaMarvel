<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

  <body class="perfil">
    <%- include('./partials/header') %>
	
	<!-- Container -->
	<div class="container-mio">
		<div class="row">
			<div class="col-12 col-md-6 col-lg-6 text-center d-flex flex-column justify-content-center">
				<div class="text-center d-flex flex-column align-items-center"  style="margin-top: 40px;">
						<h2>Hola <%=user.name %>  </h2>
						<img src="/images/users/<%= user.avatar %> ">
						<br>
						<br>
						<div class="alert alert-success mw-50 text-center"> <b>Email:</b> <%=user.email %></div>
						<div class="alert alert-success mw-50 text-center"><b>Rol:</b> <%=user.rol %></div>
				</div>
			</div>
			<div class="col-12 col-md-6 col-lg-6 text-center d-flex flex-column justify-content-center">
				<h3>Cambiar contrase単a</h3>
				<form class="text-center d-flex flex-column align-items-center" action="/users/save/<%= user.id %>?_method=PUT"
				method="POST" novalidate enctype="multipart/form-data">
					<div class="mb-3 w-50 ">
						<label for="exampleInputPassword1" class="form-label ">Nueva contrase単a</label>
						<input type="password" class="form-control" name="password1" id="exampleInputPassword1">
						<span class="text-danger small">
							<%= locals.errores && locals.errores.password ? errores.password.msg :
								null %>
						</span>
					</div>
					<div class="mb-3 w-50">
						<label for="exampleInputPassword1" class="form-label">Repetir contrase単a</label>
					 	<input type="password" class="form-control" name="password2" id="exampleInputPassword1">
					  	<span class="text-danger small">
						<%= locals.errores && locals.errores.password2 ? errores.password2.msg :
							null %>
						</span>
					</div>
					<div class=" text-center">
						<label for="avatar" class="btn btn-primary my-3">Subir imagen</label>
						<input type="file" name="avatar" id="avatar" hidden>
						<% if (locals.errores && errores.imagen) { %>
							<p>  <%=errores.imagen.msg %> </p>
						   <% } %>
					</div>
					<button type="submit" class="btn btn-success">Guardar</button>
				</form>
			</div>
		</div>
	</div>
	
<!-- agragar grilla bootstrap para formulario cambiar contrase単a -->
	<%- include('./partials/footer') %>

    <%- include('./partials/scripts') %>
</body>
</html>