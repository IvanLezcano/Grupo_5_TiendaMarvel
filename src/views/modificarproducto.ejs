<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head')  %> 
  <body class="modificar-producto">
    <h1>Modificar Producto</h1>
    <div class="volver">
      <a href="/productos"> << Volver a productos</a>
      <a href="/">Ir a Home >></a>
    </div>
    <main class="modificar">
      <form action="" method="GET" enctype="multipart/form-data" class="form">
        <div>
          <input
            type="text"
            id="nombreProducto"
            name="nombre-producto"
            placeholder="Nombre de Producto"
          />
        </div>
        <div>
          <label for="imagen">Imagen</label>
          <input type="file" name="imagen" id="imagenProducto" />
        </div>
        <div>
          <input
            type="number"
            name="precio"
            id="precioProducto"
            placeholder="Precio"
          />
          <input
            type="number"
            name="stock"
            id="stockProducto"
            placeholder="Stock"
          />
          <input type="number" name="id" id="idProducto" placeholder="id" />
        </div>
        <div>
          <label for="descripcion">Descripción del producto</label>
          <textarea
            name="descripcion"
            id="descripcion"
            cols="8"
            rows="3"
            placeholder="Escribir..."
          ></textarea>
        </div>

        <div class="select">
          <label for="categoria">Categoría</label>
          <select name="categoria" id="categoria">
            <option value="figuras">Figuras</option>
            <option value="ropa" selected>Ropa</option>
            <option value="comics">Comics</option>
            <option value="merchandising">Merchandising</option>
          </select>
        </div>

        <button type="submit">GUARDAR</button>
      </form>
    </main>
  </body>
</html>
